# Banco de dados
DATABASE_URL=postgresql://user:password@host:port/database

# Segurança - IMPORTANTE: Defina uma chave segura em produção
# Em desenvolvimento, pode usar o valor padrão
TOKEN_SECRET=dev-secret-change-in-production-min-32-chars

# Ambiente
NODE_ENV=development

# URL pública (produção)
# Em desenvolvimento, deixe vazio para usar ngrok automaticamente
# Em produção, defina a URL do seu domínio (ex: https://seu-dominio.com)
PUBLIC_BASE_URL=

# ngrok (para desenvolvimento com Telegram)
USE_NGROK=true
NGROK_API_URL=http://127.0.0.1:4040/api

# Gateways de pagamento
# PushinPay - Gateway de pagamento PIX
PUSHINPAY_TOKEN=seu_token_aqui
PUSHINPAY_BASE_URL=https://api.pushinpay.com.br/api
# Para sandbox/homologação: https://api-sandbox.pushinpay.com.br/api
# NOTA: webhook_url é configurada automaticamente via ngrok (dev) ou PUBLIC_BASE_URL (prod)

# SyncPay (futuro)
SYNCPAY_API_KEY=
SYNCPAY_API_SECRET=

# Integrações externas (opcional)
UTMIFY_API_KEY=
UTMIFY_API_URL=https://api.utmify.com
FACEBOOK_PIXEL_ID=
FACEBOOK_CAPI_ACCESS_TOKEN=
